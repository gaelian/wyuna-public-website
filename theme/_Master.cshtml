<!DOCTYPE HTML>
@{ 
	string Title = Model.WithoutSettings.String(BookSiteKeys.Title); 
	string PageTitle = Context.String(BookSiteKeys.Title) + (string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title);
}
